{
	"$schema": "./node_modules/rome/configuration_schema.json",
	"organizeImports": {
		"enabled": false
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"formatter": {
		"enabled": true,
		"indentSize": 3,
		"indentStyle": "tab",
		"lineWidth": 120,
		"formatWithErrors": false
	},
	"files": {
		"ignore": ["**/node_modules/**"]
	}
}
